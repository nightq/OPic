<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".compose.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <nightq.freedom.picture.compose.widgets.ComposeLayout
            android:id="@+id/composelayout"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@android:color/holo_blue_bright"
            android:visibility="gone" />

        <nightq.freedom.picture.compose.widgets.ComposeView
            android:id="@+id/composeView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@android:color/holo_blue_bright"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:background="@android:color/holo_blue_bright"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tvNextPosition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="Next pos"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvNextCount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="Next cou"
            android:textColor="@android:color/black" />

    </LinearLayout>

</RelativeLayout>
